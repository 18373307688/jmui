{
  "name": "jmui",
  "description": "Mobile Web UI Framework powered by React",
  "author": "Jimmy Chou <zliangyu@gmail.com>",
  "license": "MIT",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/junewinds/jmui.git"
  },
  "homepage": "https://github.com/junewinds/jmui",
  "keywords": [
    "react",
    "webpack",
    "babel",
    "mobile",
    "framework",
    "css",
    "components"
  ],
  "main": "./lib/",
  "jsnext:main": "./src/",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "eslint src",
    "watch": "babel src --watch --out-dir lib",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack --config build/webpack.config.js --progress",
    "build:file": "node build/publish.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:file",
    "preversion": "npm run clean",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build"
  },
  "dependencies": {
    "dom-helpers": "^2.4.0",
    "classnames": "^2.2.3"
  },
  "peerDependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-addons-css-transition-group": "^0.14.7"
  },
  "devDependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-addons-css-transition-group": "^0.14.7",

    "babel-core": "^6.6.0",
    "babel-cli": "^6.6.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.6.5",
    "babel-runtime": "^6.6.0",
    "babel-eslint": "6.0.0-beta.2",

    "eslint": "^2.3.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-react": "^2.3.0",

    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-react": "^4.2.0",
    "eslint-plugin-standard": "^1.3.2",
    "eslint-plugin-promise": "^1.1.0",

    "less": "^2.6.1",
    "fs-extra": "^0.26.5",

    "css-loader": "^0.23.1",
    "less-loader": "^2.2.2",
    "style-loader": "^0.13.0",
    "babel-loader": "^6.2.4",
    "eslint-loader": "^1.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "webpack": "^1.12.14"
  },
  "engines": {
    "node": ">=4.3.0",
    "npm": "^3.0.0"
  },
  "npmName": "jmui"
}
